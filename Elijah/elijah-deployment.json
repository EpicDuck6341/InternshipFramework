{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "runtime": {
          "type": "docker",
          "settings": {
            "registryCredentials": {
              "elijah-deployment": {
                "address": "elijahreg.azurecr.io",
                "username": "elijahreg",
                "password": "xxxxxxxxxx"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.5"
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.5",
              "createOptions": "{}"
            }
          }
        },
        "modules": {
          "postgres": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "postgres:16-alpine",
              "createOptions": "{}"
            },
            "env": {
              "POSTGRES_USER": { "value": "elijah" },
              "POSTGRES_PASSWORD": { "value": "Passw0rd!" },
              "POSTGRES_DB": { "value": "elijah_db" }
            }
          },
          "elijah": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "elijahreg.azurecr.io/elijah:1.8",
              "createOptions": "{}"
            },
            "env": {
              "ConnectionStrings__DefaultConnection": {
                "value": "Host=postgres;Port=5432;Database=elijah_db;Username=elijah;Password=Passw0rd!"
              },
              "MqttConfig__Hostname": { "value": "mqtt" },
              "MqttConfig__Port": { "value": "1883" }
            }
          },
          "mqtt": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "eclipse-mosquitto:2",
              "createOptions": "{\"HostConfig\":{\"PortBindings\":{\"1883/tcp\":[{\"HostPort\":\"1883\"}],\"9001/tcp\":[{\"HostPort\":\"9001\"}]},\"Binds\":[\"/home/vboxuser/Documents/InternshipFramework/Elijah/mosquitto.conf:/mosquitto/config/mosquitto.conf\",\"mqtt-log:/var/log/mosquitto\"]}}"
            }
          },
          "zigbee2mqtt": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "ghcr.io/koenkk/zigbee2mqtt:latest",
              "createOptions": "{\"HostConfig\":{\"Devices\":[{\"PathOnHost\":\"/dev/serial/by-id/usb-Itead_Sonoff_Zigbee_3.0_USB_Dongle_Plus_V2_6c77c37787c2ef118a9fc6138148b910-if00-port0\",\"PathInContainer\":\"/dev/ttyUSB0\",\"CgroupPermissions\":\"rwm\"}],\"Binds\":[\"/home/vboxuser/Documents/InternshipFramework/Elijah/zigbee2mqtt-data:/app/data\",\"/run/udev:/run/udev:ro\"],\"PortBindings\":{\"8080/tcp\":[{\"HostPort\":\"8080\"}]}}}"
            },
            "env": {
              "TZ": { "value": "Europe/Amsterdam" },
              "MQTT_SERVER": { "value": "mqtt://mqtt:1883" }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.1",
        "storeAndForwardConfiguration": { "timeToLiveSecs": 7200 },
        "routes": {}
      }
    }
  }
}
